    <modelVersion>4.0.0</modelVersion>
    <artifactId>PixelMOTD-Dist</artifactId>
    <version>${project.parent.version}</version>
    <packaging>jar</packaging>
    <parent>
        <groupId>club.rigox</groupId>
        <artifactId>PixelMOTD</artifactId>
        <version>9.0.0-SNAPSHOT</version>
    </parent>
    <build>
        <directory>../target</directory>
        <finalName>PixelMOTD-${project.version}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.1.1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <artifactSet>
                                <includes>
                                    <include>club.rigox:PixelMOTD-*</include>
                                    <include>club.rigox:compatibility</include>
                                </includes>
                            </artifactSet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
